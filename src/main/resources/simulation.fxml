<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            minHeight="550.0" minWidth="850.0"
            fx:controller="agh.ics.oop.presenter.SimulationPresenter">

    <center>
        <HBox alignment="CENTER">
            <VBox alignment="CENTER">
                <GridPane fx:id="mapGrid" gridLinesVisible="true" />
            </VBox>
        </HBox>
    </center>

    <bottom>
        <VBox alignment="CENTER">
            <HBox>
                <Button text="START" onAction="#onSimulationStartClicked" fx:id="startButton"/>
                <Button text="&#x23F5;" onAction="#onPlayClicked" fx:id="playButton" />
                <Button text="&#x23F8;" onAction="#onPauseClicked" fx:id="stopButton" />
            </HBox>
        </VBox>
    </bottom>

</BorderPane>